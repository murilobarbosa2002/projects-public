mixin paginacao(classes)
	nav(aria-label="Page navigation")
		ul.pagination(class=classes)
			li.page-item.disabled
				span.page-link
					span(aria-hidden="true") &laquo;
					span.sr-only Prev
			//- li.page-item
			li.page-item.active
				span.page-link
					| 1
					span.sr-only (current)
				//- span.page-link
			li.page-item: a(href="#").page-link 2
			li.page-item: a(href="#").page-link 3
			li.page-item
			li.page-item.active
				span.page-link
					| ...
					span.sr-only (from 3 through 9)
				//- span.page-link
			li.page-item: a(href="#").page-link 9
			li.page-item: a(href="#").page-link 10
			li.page-item: a(href="#").page-link 11
			li.page-item
				a(href="#").page-link
					span(aria-hidden="true") &raquo;
					span.sr-only Next
			//- li.page-item
	//- nav