extend common/template.pug

block vuejs
	-var vuejs = false;
//- block vuejs

block title
	-var title = 'Document';
//- block title

block theme
	-var theme = "#bd1e33"; // NAO SE ESQUEÇA DE TROCAR PARA COR TEMA DO SITE
//- block theme

block conteudo
	h1.sr-only Nome do Site
	section.banner-area
		.carousel(data-interval="5000" data-ride="carousel").slide.carousel-fade#banner
			.carousel-inner
				// REPETE
				.carousel-item.active
					lazyimage(src="assets/images/banner1.jpg" width="1140" height="680" alt="Banner 1")
				// FIM REPETE
				// REPETE
				.carousel-item
					lazyimage(src="assets/images/banner2.jpg" width="1140" height="680" alt="Banner 1")
				// FIM REPETE
			//- .carousel-inner

			a(href="#banner" data-slide="prev" aria-label="Prev").ctrls.prev.fas.fa-chevron-left
			a(href="#banner" data-slide="next" aria-label="Next").ctrls.next.fas.fa-chevron-right

			ol.carousel-indicators
				li(data-target="#banner" data-slide-to="0").active
				li(data-target="#banner" data-slide-to="1")
		//- .carousel(data-interval="5000").slide.carousel-fade#banner
	//- .banner-area

	section.newsletter
		.container
			h2: span Newsletter

			.row
				.col-lg-6 Fique por dentro de todas as informações mais recentes. Inscreva-se para receber nossa novidades.
				//- .col-lg-6
				.col-lg-6
					form
						label(for="email-newsletter").sr-only E-mail

						.input-group
							input(type="email" name="email-newsletter" id="email-newsletter" placeholder="E-mail").form-control
							.input-group-append
								button.btn.btn-newsletter
									span.sr-only Enviar
									i.fas.fa-paper-plane
						//- .input-group
					//- form
				//- .col-lg-6
			//- .row
		//- .container
	//- section.newsletter

