					.fotos
						a(href="#")
							span.btn.btn-site #[i.fas.fa-plus] #[span.sr-only VER FOTO]
							lazyimage(src="http://placehold.it/260x260" width="260" height="260" alt="Nome do Produto")
							//- .foto
					// FIM REPETE
			//- .owl-carousel#produtos

			.text-center
				a(href="#").btn-site-outline.btn VER TODAS
